<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" android:height="70dp" android:top="0dp">
            <gradient android:startColor="#ff99cc00" android:endColor="#ff779e00" android:angle="90"/>
            <corners android:radius="70dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:height="70dp" >
            <solid android:color="#9999cc00"  />
            <padding android:bottom="0dp" android:top="48dp" />
            <corners android:radius="70dp"/>
            <stroke android:width="1px" android:color="#ff779e00" />
        </shape>
    </item>

    <item android:top="5dp"
        android:height="3dp"
        android:width="25dp"
        android:gravity="center_horizontal">
        <shape android:shape="rectangle" >
            <padding android:left="0dp" android:right="0dp" android:top="0dp" />
            <solid android:color="#ffffffff" />
        </shape>
    </item>
</layer-list>
